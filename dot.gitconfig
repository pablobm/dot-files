[core]
  pager = cat
  editor = vim
  excludesfile = ~/.git.global_ignores
  trustctime = false # See http://www.git-tower.com/blog/make-git-rebase-safe-on-osx/

[color]
  diff = auto
  status = auto
  branch = auto

[push]
  default = simple

[include]
  path = ~/.git.local

[alias]
  co = checkout
